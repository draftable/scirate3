 <id>0811.3906</id><submitter>Thomas Schulte-Herbr\&quot;uggen</submitter><version version='v1'><date>Mon, 24 Nov 2008 16:06:31 GMT</date><size>96kb</size></version><version version='v2'><date>Fri, 19 Dec 2008 20:59:32 GMT</date><size>97kb</size></version><version version='v3'><date>Sat, 20 Dec 2008 14:06:29 GMT</date><size>97kb</size></version><version version='v4'><date>Sun, 22 Feb 2009 15:47:51 GMT</date><size>383kb</size></version><title>Lie-Semigroup Structures for Reachability and Control of Open Quantum
